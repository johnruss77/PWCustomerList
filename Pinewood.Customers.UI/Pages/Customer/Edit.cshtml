@page
@model EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="text-center">
    <h1 class="display-4">Edit Customer</h1>
</div>

<form method="post">

    <div class="Customer_Info">
        <p>
            Name:
            <input asp-for="Customer!.Name" />
        </p>
        <p>Customer ID:
        <input asp-for="Customer!.ID" />
        </p>
        <p>
        Email:
        <input asp-for="Customer!.Email" />
        </p>
        <p>
        Phone:
        <input asp-for="Customer!.Phone" />
        </p>
        <p>
        Location:
        <input asp-for="Customer!.LocationID" />
        </p>
    </div>
    <hr />
    
    <input type="submit" />
</form>
