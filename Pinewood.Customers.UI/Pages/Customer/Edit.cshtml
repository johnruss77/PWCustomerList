@page
@model EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="text-center">
    <h1 class="display-4">Edit Customer</h1>
</div>

<form method="post">

    <section class="Customer_Info">
        <p>
            Name:
            <input asp-for="Customer!.Name" />
        </p>
        <p>
            Customer ID:
            <input asp-for="Customer!.ID" readonly />
        </p>
        <p>
            Email:
            <input asp-for="Customer!.Email" />
        </p>
        <p>
            Phone:
            <input asp-for="Customer!.Phone" />
        </p>
        <p>
            Location:
            <select asp-for="Customer!.LocationID" asp-items="@(new SelectList(Model.locList, "ID", "Name"))">
                <option value="">Choose Location</option>
            </select>
        </p>
    </section>
    <hr />
    
    <input class="button" type="submit" />
</form>


